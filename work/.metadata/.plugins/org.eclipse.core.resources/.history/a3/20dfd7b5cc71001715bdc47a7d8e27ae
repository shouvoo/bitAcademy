package basic;

public class ForStar 
{

	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		for (int i = 0; i < 5; i++) 
		{
			for (int j = 0; j <= i; j++) 
			{
				System.out.print("*");
			}
			System.out.println();
		}
		
		System.out.println("-----------------------------------");
		
		for (int i = 0; i < 5; i++) 
		{
			for (int j = 0; j < 5 - i; j++) 
			{
				System.out.print("*");
			}
			System.out.println();
		}
		
		System.out.println("-----------------------------------");
		
		for (int i = 0; i < 5; i++) 
		{
			for (int j = 0; j < 5; j++) 
			{
				System.out.print("");
				System.out.print("*");
				System.out.println(j - i);
				if(j - i >= 0) System.out.print("*");
			}
			System.out.println();
		}
	}

}

		var btn1 = $("#btn1")[0];	
		
		btn1.addEventListener("click", function(e) {
			/*var $div = $("div");
			
			 for(var i = 0; i < $div.length; i++)
			{
				$div[i].innerHTML = "<strong>변경됨</strong>"

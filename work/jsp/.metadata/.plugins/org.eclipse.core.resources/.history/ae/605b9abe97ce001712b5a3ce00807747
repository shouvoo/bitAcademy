<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.omp.repository.mapper.MembershipMapper">
	<resultMap id="membershipMap" type="membership">
		<result column="support_no" property="supportNo" />
		<result column="title" property="title" />
		<result column="site" property="site" />
	</resultMap>

	<insert id="insertMemberComment" parameterType="SupportLinkDomain">
 		insert into support_link(
			support_no, 
			title, 
			site 
		) values ( 
			support_link_seq.nextval, 
		    #{supportNo}, #{site}
		)
	</insert>
	
	<update id="modifyMemberComment" parameterType="board">
	   update support_link 
	      set title = #{title}, 
	          site = #{site}, 
	    where support_no = #{supportNo}
	</update>
	
	<delete id="deleteMemberComment" parameterType="int">
		delete
		  from support_link
	  	 where support_no = #{supportNo}
	</delete>
	
	<select id="detailMemberComment" parameterType="int" resultMap="supportMap">
		select * 
		  from support_link
	  	 where support_no = #{supportNo}
	</select>
	
	<select id="readMemberComment" resultMap="supportMap" parameterType="page">
	  	select * 
	  		from(select rownum rnum, a.*
	  			from (select *
	  				from support_link
	  			order by support_no desc)a)
	  		where rnum between ? and ?
	</select>
	
	<select id="totalSupportLink" resultType="int">
		select count(*) from support_link
	</select>
</mapper>































<!-- 
	상대값 적용 : +=, -=   (*=, /= 은 허용하지 않는다)
 -->
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <style>
        div {
            width: 50px; height: 50px;
            background-color: orange;
        }
    </style>
    <script src="../js/jquery-3.2.1.js"></script>
</head>
<body>
    <div></div>
	<script>
	$("div").hover(
			
		function(){
			//마우스가 over일때
			$(this).animate({margin: 50, left: 500, opacity: 0.1}, "slow");
		},
		
		function(){
			//마우스가 out일때
			$(this).animate({margin: 0, left: 0, opacity: 1}, "slow");
		}
	);
	</script>    
</body>
</html>


















